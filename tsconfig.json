{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
